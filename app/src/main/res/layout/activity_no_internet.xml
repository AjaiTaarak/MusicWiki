<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NoInternet">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView

            android:backgroundTint="@color/green"
            android:background="@drawable/ic_nointernet"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="No Internet connection"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="Please check your Internet Connection"
            android:layout_marginTop="@dimen/padding_10"
            android:alpha="0.8"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_nointernetretry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:textColor="@color/white"

            android:paddingLeft="32px"
            android:paddingTop="18px"
            android:paddingRight="32px"
            android:paddingBottom="18px"

            android:text="Retry"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>