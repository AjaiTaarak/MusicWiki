<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding_10"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.0"
                        android:textColor="@color/black"
                        android:text="Top Artists"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/img_fragmore_seemoreartist"
                        android:background="@drawable/ic_more"
                        android:backgroundTint="@color/colorPrim2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbars="vertical"
                    android:id="@+id/rv_topartists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.0"
                        android:textColor="@color/black"
                        android:text="Top Albums"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/img_fragmore_seemorealbum"
                        android:background="@drawable/ic_more"
                        android:backgroundTint="@color/colorPrim2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_topalbums"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_16"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.0"
                        android:textColor="@color/black"
                        android:text="Similar Genres"
                        android:fontFamily="@font/poppins_semibold"

                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_frammore_simgenre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/textgrey"
                        android:text="Nothing to show !"
                        android:id="@+id/txt_frammore_simgenre_warn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>